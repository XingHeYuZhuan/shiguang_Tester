{
  "manifest_version": 3,
  "name": "shiguang_Tool",
  "version": "1.0",
  "description": "拾光课程表适配使用的测试开发工具，设置school.js为调用测试脚本，如需适配请改成你的js适配代码",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content-script.js"],
      "run_at": "document_start"
    }
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "permissions": [
    "scripting",
    "activeTab",
    "notifications",
    "downloads"
  ],
  "web_accessible_resources": [
    {
      "resources": ["school.js", "injected_bridge.js"],
      "matches": ["<all_urls>"]
    }
  ]
}